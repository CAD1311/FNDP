.container {
  padding: 20rpx;
}

.input-section {
  width: 100%;
  margin-bottom: 30rpx;
}

.input-area {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.detect-btn {
  background-color: #3c78d8;
  color: white;
  width: 100%;
}

.result-section {
  width: 100%;
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
}

.result-item {
  margin-bottom: 20rpx;
}

.label {
  font-weight: bold;
  color: #333;
  margin-right: 10rpx;
}

.value {
  color: #666;
}

.value.true {
  color: #4caf50;
}

.value.false {
  color: #f44336;
}

.save-btn {
  margin-top: 20rpx;
  background-color: #4caf50;
  color: white;
}
