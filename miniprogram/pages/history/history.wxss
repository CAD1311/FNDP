.container {
  padding: 20rpx;
}

.history-item {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.time {
  color: #999;
  font-size: 24rpx;
}

.result {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.result.true {
  background-color: #e8f5e9;
  color: #4caf50;
}

.result.false {
  background-color: #ffebee;
  color: #f44336;
}

.news-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1.6;
}

.detail-section {
  border-top: 1rpx solid #eee;
  padding-top: 15rpx;
  margin-bottom: 15rpx;
}

.detail-item {
  margin-bottom: 10rpx;
}

.label {
  color: #666;
  font-size: 26rpx;
}

.value {
  color: #333;
  font-size: 26rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 200rpx;
}

.delete-btn {
  background-color: #ff5252;
  color: white;
  font-size: 24rpx;
  padding: 10rpx 0;
  width: 200rpx;
  margin: 0;
}

.clear-all-btn {
  background-color: #f44336;
  color: white;
  margin-top: 40rpx;
  width: 80%;
}
