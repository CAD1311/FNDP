.container {
  padding: 30rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

.header {
  margin-bottom: 40rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.history-list {
  width: 100%;
}

.history-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.time {
  color: #999;
  font-size: 24rpx;
}

.result-tag {
  display: inline-block;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.result-tag.true {
  background-color: rgba(76, 175, 80, 0.1);
  color: #4caf50;
}

.result-tag.false {
  background-color: rgba(244, 67, 54, 0.1);
  color: #f44336;
}

.news-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 24rpx;
  line-height: 1.6;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.detail-section {
  border-top: 2rpx solid #f0f0f0;
  padding-top: 24rpx;
}

.detail-item {
  margin-bottom: 30rpx;
}

.item-header {
  margin-bottom: 16rpx;
}

.label {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.reasons-list {
  margin-left: 10rpx;
}

.reason-item {
  display: flex;
  margin-bottom: 16rpx;
  align-items: flex-start;
}

.bullet {
  color: #666;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.reason-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  flex: 1;
}

.recommendation {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
}

.action-buttons {
  display: flex;
  justify-content: flex-end;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #f0f0f0;
}

.delete-btn {
  background: #ff5252;
  color: white;
  font-size: 28rpx;
  padding: 0;
  width: 180rpx;
  height: 72rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 82, 82, 0.3);
  transition: all 0.3s ease;
}

.delete-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(255, 82, 82, 0.2);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 240rpx;
  padding: 0 40rpx;
}

.empty-text {
  font-size: 36rpx;
  color: #999;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-subtext {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.clear-all-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff5252 100%);
  color: white;
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 82, 82, 0.3);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.clear-all-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(255, 82, 82, 0.2);
}

.btn-text {
  display: inline-block;
  line-height: 1;
}
