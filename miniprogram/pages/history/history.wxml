<view class="container">
  <view class="history-list">
    <view class="history-item" wx:for="{{historyList}}" wx:key="timestamp">
      <view class="history-header">
        <text class="time">{{item.formattedTime}}</text>
        <text class="result {{item.result.IsNewsTrue ? 'true' : 'false'}}">
          {{item.result.IsNewsTrue ? '真实新闻' : '虚假新闻'}}
        </text>
      </view>
      
      <view class="news-text">{{item.text}}</view>
      
      <view class="detail-section">
        <view class="detail-item">
          <text class="label">原因：</text>
          <text class="value">{{item.result.reasons}}</text>
        </view>
        <view class="detail-item">
          <text class="label">建议：</text>
          <text class="value">{{item.result.recommendation}}</text>
        </view>
      </view>
      
      <button class="delete-btn" bindtap="deleteItem" data-index="{{index}}">删除此记录</button>
    </view>
  </view>

  <view class="empty-tip" wx:if="{{!historyList.length}}">
    暂无历史记录
  </view>

  <button class="clear-all-btn" bindtap="clearAllHistory" wx:if="{{historyList.length}}">清空所有记录</button>
</view> 